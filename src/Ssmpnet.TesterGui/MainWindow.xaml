<Window x:Class="Ssmpnet.TesterGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Ssmpnet.TesterGui"
        Title="Ssmpnet Test" Height="374" Width="247" ResizeMode="NoResize">
    <Window.DataContext>
        <local:TesterViewModel />
    </Window.DataContext>
    <Grid Height="336" Width="226">

        <Label Content="Publisher" Height="28" HorizontalAlignment="Left" Margin="19,8,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left"
                 Margin="79,10,0,0"
                 Name="textBox1"
                 VerticalAlignment="Top" Width="120"
                 Text="{Binding Rate}" />

        <Label Content="Subscriber" Height="28" HorizontalAlignment="Left" Margin="12,38,0,0" Name="label2" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left"
                 Margin="79,40,0,0"
                 Name="textBox2"
                 VerticalAlignment="Top" Width="120" />

        <TextBlock Height="23" HorizontalAlignment="Left" Margin="79,69,0,0"
                   Name="textBlock1"
                   Text="{Binding Rate}"
                   VerticalAlignment="Top" Width="120" />
        
        <ListView Margin="79,98,0,0" Name="listBox1"
                  ItemsSource="{Binding TesterItems}"
                  HorizontalAlignment="Left" Width="120" Height="141"
                  VerticalAlignment="Top">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label Content="{Binding Location}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <Button Content="{Binding PubCmdText}"
                IsEnabled="{Binding PubEnabled}"
                Height="23"
                HorizontalAlignment="Left"
                Margin="79,257,0,0"
                Name="button1"
                VerticalAlignment="Top" Width="120"
                Command="{Binding StartPub}" />


        <Button Content="{Binding SubCmdText}"
                IsEnabled="{Binding SubEnabled}"
                Height="23"
                HorizontalAlignment="Left"
                Margin="79,286,0,0"
                Name="button2"
                VerticalAlignment="Top" Width="120"
                Command="{Binding StartSub}"/>

    </Grid>
</Window>
